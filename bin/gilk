#!/usr/bin/env node

require('shelljs/global');

var fs = require('fs');
var path = require('path');
var _ = require('underscore');
var docco = require('docco');
var cheerio = require('cheerio');
var args = require('minimist')(process.argv.slice(2));

var root = __dirname + '/../';

var files = args._;

var title = args.title || 'Home';

var doccoOutput = 'build/docco-out/';
var publicDir = 'build/public/';

mkdir('-p', doccoOutput);
mkdir('-p', publicDir);

function destination(file) {
    return path.join(doccoOutput, path.basename(file, path.extname(file)) + '.html');
};

var sources = files.map(function (source) {
    return {
        href: path.basename(destination(source)),
        name: path.basename(source)
    }
});

navbar = _.template(fs.readFileSync(root + 'navbar.jst').toString())({
    title: title,
    sources: sources
});

function postProc() {
    files.forEach(function (file) {
        var ext = path.extname(file),
            specName = path.basename(file, ext),
            specFile = path.basename(file),
            $ = cheerio.load(fs.readFileSync(doccoOutput + specName + '.html'));
        $('head').append('<link rel="stylesheet" media="all" href="jasmine-2.3.2/jasmine.css">');
        $('body').prepend(navbar);
        [
            'jasmine-2.3.2/jasmine.js',
            'jasmine-2.3.2/jasmine-html.js',
            'jasmine-2.3.2/boot.js',
            'jasmine-docco.js',
            specFile
        ].forEach( function (src) {
            $('body').append('<script type="text/javascript" src="' + src + '"></script>');
        });
        fs.writeFileSync(publicDir + specName + '.html', $.html());
        cp(file, publicDir + specFile);
    });
};

docco.document({
    args: files,
    output: doccoOutput,
    template: root + '/page.jst',
    css: '?' // Supresses warning
}, postProc);

if (args.index) {
    var index = args.index,
        ext = path.extname(index),
        name  = path.basename(index, ext),
        toc = _.template(fs.readFileSync(root + 'toc.jst').toString())({
            title: 'Table of Contents',
            sources: sources
        });
    docco.document({
        args: [index],
        output: doccoOutput,
        template: root + '/page.jst',
        css: '?' // Supresses warning
    }, function () {
        var $ = cheerio.load(fs.readFileSync(doccoOutput + name + '.html'));
        $('body').prepend(navbar);
        if (sources.length > 1) {
            $('.header').append(toc);
        }
        fs.writeFileSync(publicDir +  'index.html', $.html());
    });
}

// Add resources to public dir
cp('-R', root + '/public/*', publicDir);
