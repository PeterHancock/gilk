#!/usr/bin/env node

var gilk = require('../index');

var args = require('minimist')(process.argv.slice(2)),
    files = args._,
    title = args.title || 'Home',
    js = args.js,
    css = args.css,
    indexSrc = args.index;

console.log('gilk: started ...');

gilk({
    files: args._,
    title: args.title,
    js: args.js,
    css: args.css,
    indexFile: args.index
}).then(function () {
    console.log('gilk: complete.');
}, function (err) {
    console.error('Gilk error: ', err);
});
