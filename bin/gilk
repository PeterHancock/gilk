#!/usr/bin/env node

var gilk = require('../index');

var args = require('minimist')(process.argv.slice(2));
var files = args._;
var title = args.title || 'Home';
var js = args.js;
var css = args.css;
var indexSrc = args.index;

gilk({
    files: args._,
    title: args.title,
    js: args.js,
    css: args.css,
    indexFile: args.index
});
